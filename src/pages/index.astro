---
import { featuredArticles, featuredProjects, featuredMods } from "../lib/featured";
import { GLOBAL } from "../lib/variables";
import Layout from "../layouts/Layout.astro";
import Hero from "../components/home/Hero.astro";
import Section from "../components/common/Section.astro";
import FeaturedProjects from "../components/home/FeaturedProjects.astro";
import FeaturedArticles from "../components/home/FeaturedArticles.astro";
import FeaturedMods from "../components/home/FeaturedMods.astro";
---

<Layout>
  <Fragment slot="head">
    <title>{GLOBAL.username} • {GLOBAL.shortDescription}</title>
    <meta
      name="description"
      content={GLOBAL.longDescription}
    />
    <meta
      property="og:title"
      content={`${GLOBAL.username} • ${GLOBAL.shortDescription}`}
    />
    <meta
      property="og:description"
      content={GLOBAL.longDescription}
    />
    <meta property="og:image" content={`${GLOBAL.rootUrl}/stovonson.png`} /> 
    <meta property="og:url" content={GLOBAL.rootUrl} />
    <meta
      name="bsky:title"
      content={`${GLOBAL.username} • ${GLOBAL.shortDescription}`}
    />
    <meta
      name="bsky:description"
      content={GLOBAL.longDescription}
    />
    <meta http-equiv="content-language" content="en" />
    <meta name="language" content="English" />
    <link rel="canonical" href={GLOBAL.rootUrl} />
  </Fragment>
  <Section class="my-4">
    <Hero />
  </Section>
  <Section>
    <FeaturedProjects featuredProjects={featuredProjects} />
  </Section>
  <Section>
    <FeaturedArticles featuredArticles={featuredArticles} />
  </Section>
  <Section>
    <FeaturedMods featuredMods={featuredMods} />
  </Section>
</Layout>
